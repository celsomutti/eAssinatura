<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovimentoActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textMovimentacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/lblMovimentacoes"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinAgenteMov"
            android:layout_width="113dp"
            android:layout_height="36dp" />

        <Spinner
            android:id="@+id/datEdicaoListaMov"
            android:layout_width="177dp"
            android:layout_height="36dp" />


        <Button
            android:id="@+id/btnListarMov"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="ListagemMovimentos"
            android:text="@string/btnListar" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listMovimentacoes"/>

</LinearLayout>